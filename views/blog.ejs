<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <%- include('./partials/header') %>

</head>
<body>
  <%- include("./partials/nav") %>
  <div class="container">
    <h1 type="title" ><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" width="400px">
    <pre type="body" class="fs-5   text-wrap"><%= blog.body %></pre>
  </div>
  <div class="mx-5 my-4">
  <h3>Coments (<%= comments.length %>)</h3>
  <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post" >
      
        <div class="mb-3">
          <input type="text" name="commentBody" class="form-control" placeholder="Write you comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  <% } %>
  <% comments.forEach(element => { %>
   <div class="container">
   <img src="<%= element.userId.profileImage %>" height="25px">
    <%= element.userId.name %>
    <pre><%= element.commentBody %></pre>
   </div>
  <% }) %>
  </div>
  <%- include("./partials/script")  %>

</body>
</html>